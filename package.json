{
  "name": "tgaihelpbot",
  "version": "1.0.0",
  "description": "Production-ready Telegram bot with OpenRouter integration",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "dev-old": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start-old": "node dist/index.js",
    "railway:build": "npm run build",
    "railway:start": "npm run start",
    "postbuild": "echo 'Build completed successfully'"
  },
  "engines": {
    "node": ">=18.18"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "telegraf": "^4.15.3",
    "undici": "^6.18.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.11.19",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
